<Window x:Class="News.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:News"
        xmlns:controls="clr-namespace:News.controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1200">
    <Grid Name="WindowRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <ListBox DisplayMemberPath="Title" Grid.Column="0" ItemsSource="{Binding Path=Stories}" SelectedItem="{Binding Path=SelectedStory}"></ListBox>
        <controls:StoryControl Story="{Binding Path=SelectedStory}"  Grid.Column="1" x:Name="StoryControl"></controls:StoryControl>
    </Grid>
</Window>
