<UserControl x:Class="News.Controls.StoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:News.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Path=Title}" Grid.Row="0" Grid.Column="0"></TextBlock>
            <TextBlock Text="{Binding Path=Author}" Grid.Row="0" Grid.Column="0" Margin="10,0,0,0"></TextBlock>
        </StackPanel>

        <TextBlock Text="{Binding Path=Description}" Grid.Row="1" Grid.Column="0" TextWrapping="Wrap"></TextBlock>
        <TextBlock Text="{Binding Path=Date}" Grid.Row="2" Grid.Column="0"></TextBlock>

        <Image Source="{Binding Path=Picture}" Grid.Row="1" Grid.Column="1"></Image>
    </Grid>
</UserControl>
