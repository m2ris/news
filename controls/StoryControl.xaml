<UserControl x:Class="News.controls.StoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:News.controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="tbTitle" Text="{Binding Path=Story.Title}" Grid.Row="0" Grid.Column="0"></TextBlock>
        <TextBlock TextWrapping="Wrap" Text="{Binding Path=Story.Content}" Name="tbContent" Grid.Row="1" Grid.Column="0"></TextBlock>
        <TextBlock Name="tbDate" Text="{Binding Path=Story.Date}" Grid.Row="2" Grid.Column="0"></TextBlock>

        <Image Name="iPicture" Source="{Binding Path=Story.Picture}" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</UserControl>
